<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.halilozcan.halopinlib.HaloPinView
        android:id="@+id/pin_view"
        android:layout_width="150dp"
        android:layout_height="56dp"
        app:activePinColor="@android:color/black"
        app:activeRadius="28dp"
        app:inActivePinColor="@android:color/holo_red_dark"
        app:inActiveRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pinCount="5" />

    <Button
        android:id="@+id/simulate_pin_button"
        android:layout_width="wrap_content"
        android:text="Simulate Pin"
        app:layout_constraintTop_toBottomOf="@id/pin_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>